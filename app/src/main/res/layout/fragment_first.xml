<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_first5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Suzhou"
        app:layout_constraintBottom_toTopOf="@+id/button_first6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_first6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="ShengYang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first5"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_first4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Beijing"
        app:layout_constraintBottom_toTopOf="@+id/button_first3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_first3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Shanghai"
        app:layout_constraintBottom_toTopOf="@+id/button_first2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first4"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_first2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Shenzheng"
        app:layout_constraintBottom_toTopOf="@+id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first3"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/label_attr"
        android:fontFamily="sans-serif-black"
        android:text="Weather Forecast"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/button_first4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="GuangZhou"
        app:layout_constraintBottom_toTopOf="@+id/button_first5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first2"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>